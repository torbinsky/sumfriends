<h1>Sign In</h1>
<div class="col-sm-12">
	<form class="form-horizontal">
		{{#if loginFailed}}
			<div class="alert">Invalid username or password.</div>
		{{/if}}
	    <div class="form-group">
	    <label for="inputSummonerName" class="col-sm-4 control-label">Summoner Name</label>
	    <div class="col-sm-5">
	    	{{input type="text" id="inputSummonerName" placeholder="Summoner name" classNames="form-control"  required=""}}
	    </div>
	  </div>
	  <div class="form-group">
	    <label for="inputPassword" class="col-sm-4 control-label">Password</label>
	    <div class="col-sm-3">
	    	{{input type="password" id="inputPassword" placeholder="Password" classNames="form-control"  required=""}}
	    </div>
	  </div>
	  <div class="form-group">
	    <div class="col-sm-offset-4 col-sm-8">
	      <button type="submit" class="btn btn-primary" {{bind-attr disabled="isProcessing"}}>Sign In</button>
	    </div>			    
	  </div>
	  <div class="form-group">
	    <div class="col-sm-offset-4 col-sm-8">
	      <p>Don't have an account? {{#link-to 'signup'}}Signup Now{{/link-to}}</p>
	    </div>			    
	  </div>
  </form>
</div>
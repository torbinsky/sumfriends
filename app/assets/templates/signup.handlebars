<h1>Create Account</h1>
<div class="col-sm-12">
	<form class="form-horizontal">
	  <div class="form-group">
	    <label for="inputSummonerName" class="col-sm-4 control-label">Summoner Name</label>
	    <div class="col-sm-4">
	    	{{input type="text" id="inputSummonerName" placeholder="Summoner name" classNames="form-control" required=""}}
	    </div>
	  </div>
	  <div class="form-group">
	    <label for="inputEmail" class="col-sm-4 control-label">E-mail Address</label>
	    <div class="col-sm-5">
	    	{{input type="email" id="inputEmail" placeholder="E-mail Address" classNames="form-control"}}
	    </div>
	  </div>
	  <div class="form-group">
	    <label for="inputPassword" class="col-sm-4 control-label">Password</label>
	    <div class="col-sm-3">
	    	{{input type="password" id="inputPassword" placeholder="Password" classNames="form-control"  required=""}}
	    </div>
	  </div>
	  <div class="form-group">
	    <label for="inputPassword2" class="col-sm-4 control-label">Password</label>
	    <div class="col-sm-3">
	    	{{input type="password" id="inputPassword2" placeholder="Confirm Password" classNames="form-control"  required=""}}
	    </div>
	  </div>
	  <div class="form-group">
	    <div class="col-sm-offset-4 col-sm-8">
	      <button type="submit" class="btn btn-primary" {{bind-attr disabled="isProcessing"}}>Create Account</button>
	    </div>			    
	  </div>			  
  </form>
</div>
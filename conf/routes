# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           			@sumbet.controllers.Application.index()
GET		/login									@sumbet.controllers.AuthController.login()
POST	/login									@sumbet.controllers.AuthController.loginSubmit()
GET		/signup									@sumbet.controllers.AuthController.signup()
POST	/signupSubmit							@sumbet.controllers.AuthController.signupSubmit()
GET		/logout									@sumbet.controllers.AuthController.logout()

GET		/assets/javascripts/routes				@sumbet.controllers.Application.javascriptRoutes()
GET		/api/v1/account							@sumbet.controllers.ApiController.getAccount()
GET		/api/v1/matches/:matchId				@sumbet.controllers.ApiController.getMatch(matchId: Long)
GET		/api/v1/summoners/:summonerId			@sumbet.controllers.ApiController.getSummoner(summonerId: Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

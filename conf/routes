# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           									@sumfriends.controllers.Application.index()
GET		/login															@sumfriends.controllers.AuthController.login()
POST	/login															@sumfriends.controllers.AuthController.loginSubmit()
GET		/signup															@sumfriends.controllers.AuthController.signup()
POST	/signupSubmit													@sumfriends.controllers.AuthController.signupSubmit()
GET		/logout															@sumfriends.controllers.AuthController.logout()

GET		/assets/javascripts/routes										@sumfriends.controllers.Application.javascriptRoutes()
GET		/api/v1/account													@sumfriends.controllers.ApiController.getAccount()
GET		/api/v1/matches/:matchId										@sumfriends.controllers.ApiController.getMatch(matchId: Long)
GET		/api/v1/summoners												@sumfriends.controllers.ApiController.getSummoners(limit: Int ?= 10)
GET		/api/v1/summoners/:summonerId									@sumfriends.controllers.ApiController.getSummoner(summonerId: Long)
GET		/api/v1/summoners/:summonerId/leagueHistories					@sumfriends.controllers.ApiController.getSummonerLeagueHistory(summonerId: Long)
GET		/api/v1/summoners/:summonerId/leagueHistories/last				@sumfriends.controllers.ApiController.getSummonerLeagueHistory(summonerId: Long)
GET		/api/v1/summoners/:summonerId/leagueHistories/last/:queue		@sumfriends.controllers.ApiController.getLastSummonerLeagueHistoryForQueue(summonerId: Long, queue: String)
GET		/api/v1/leagueHistories/:id										@sumfriends.controllers.ApiController.getLeagueHistory(id: String)
GET		/foo															@sumfriends.controllers.ApiController.foo()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
